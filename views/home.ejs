<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EJS</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif
        }
    </style>
</head>

<body>
    <div class="container mt-4">
        <h1>URL Shortener</h1>
        <% if(locals.id){ %>
        <p class="p-2">URL Generated: http://localhost:3000/url/<%= id %> </p>
        <% } %>
        <div class="p-3">
            <form method="post" action="/url">
                <label for="exampleInputPassword1" class="form-label">Enter Your Original URL:</label>
                <input type="text" class="form-control" id="exampleInputPassword1" placeholder="www.example.com"
                    name="url">
                <button class="btn btn-primary mt-3" type="submit">Generate</button>
            </form>
        </div>
        <div>
            <% if (locals.urls) { %>
            <table class="table">
                <thead>
                    <tr>
                        <th>S. No</th>
                        <th>Short Id</th>
                        <th>Redirect</th>
                        <th>Clicks</th>
                    </tr>
                </thead>
                <tbody>
                    <% urls.forEach((url, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= url.shortId %></td>
                        <td><%= url.redirectURL %></td>
                        <td><%= url.visitHistory.length %></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
            <% } %>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>